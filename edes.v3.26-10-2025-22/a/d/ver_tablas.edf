$query = 'select tabid,tabname,ncols,nindexes from systables where tabtype = "T" order by tabid';
SS::query($query);
$usuCursor = array();
$i = 0;$tabid = '';
$tab = array();
while( $row = SS::get("num") ){
if ($tabid != trim($row[0])){
$tabid = trim($row[0]);
$tab[$i][0] = trim($row[0]);
$query2 = 'select B.tabname from syssyntable as A,systables as B where A.btabid = "'.trim($row[0]).'" and A.tabid = B.tabid';
SS::query($query2, [], 1);
$syn = 0;
while( $row2 = SS::get("num", 1) ){
$syn = 1;
$tab[$i][1] = trim($row2[0]);
}
if ($syn == 0)
$tab[$i][1] = trim($row[1]);
$tab[$i][2] = trim($row[2]);
$tab[$i][3] = trim($row[3]);
$query2 = 'select count(*) as n from '.$tab[$i][1];
SS::query($query2, [],1);
$row2 = SS::get("num", 1);
$tab[$i][4] = trim($row2[0]);
$i++;
}
}
for ($i=0;$i<count($tab);$i++){
array_push( $usuCursor, array( $tab[$i][1],$tab[$i][2],$tab[$i][3],$tab[$i][4] ) );
}