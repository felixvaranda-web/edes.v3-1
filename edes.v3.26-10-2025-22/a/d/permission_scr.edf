function uNomIcono( $txt ){
if( $txt[0]=='{' ){
list( $Icono, $txt ) = explode('}',mb_substr($txt,1));
}else if( $txt[0]=='[' ){
list( $Icono, $txt ) = explode(']',mb_substr($txt,1));
}
if( $Icono[0]=='$' ) $Icono = 'edes.php?R:$a/g/'.mb_substr($Icono,1);
if( $Icono!='' ){
return "<img src={$Icono}>".trim($txt);
}else{
return trim($txt);
}
