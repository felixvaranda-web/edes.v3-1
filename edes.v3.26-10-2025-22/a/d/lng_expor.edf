#include(*) lng
[Title]=@MENSAJE AL EXPORTAR@
[Button]a|[u] @Grabar Mensaje@
[FormButtons]-
[Fields]
|_no_|#|H|500,80,4||*|||
[PHPIni]a
$uDimMSG = array();
if( SS::count( "{$_ENV['SYSDB']}gs_language", "tf_translation='{$_ENV['ON']}'" )==0 ){
eAddField( "=@Mensaje@<br><i class='ICONINPUT' onclick=VerText('es') title='@Ver mensaje@'>V</i> | msg_es | # | H | 500,80,10 || M || # |" );
$uDimMSG['es'] = file_get_contents( '../_datos/config/msg_export.es' );
}else{
SS::query( "select cd_gs_language,nm_gs_language from {$_ENV['SYSDB']}gs_language where cd_gs_language='".$_SESSION["_LanguageDefault"]."' and tf_translation='{$_ENV['ON']}' order by nm_gs_language" );
list( $Cod, $Nom ) = SS::get("num");
$Nom = eUcFirst(trim($Nom));
$Cod = trim($Cod);
eAddField( "=".$Nom."<br><i class='ICONINPUT' onclick=VerText('{$Cod}') title='@Ver mensaje@'>V</i> | msg_{$Cod} | # | H | 500,80,10 || M || # |" );
$uDimMSG[$_SESSION["_LANGUAGE_"]] = file_get_contents('../_datos/config/msg_export.'.$_SESSION["_LANGUAGE_"]);
SS::query( "select cd_gs_language,nm_gs_language from {$_ENV['SYSDB']}gs_language where cd_gs_language<>'".$_SESSION["_LanguageDefault"]."' and tf_translation='{$_ENV['ON']}' order by nm_gs_language" );
while( $r=SS::get("num") ){
list( $Cod, $Nom ) = $r;
$Nom = eUcFirst(trim($Nom));
$Cod = trim($Cod);
eAddField( "=".$Nom."<br><i class='ICONINPUT' onclick=VerText('{$Cod}') title='@Ver mensaje@'>V</i> | msg_{$Cod} | # | H | 500,80,10 || M |||" );
$uDimMSG[$Cod] = file_get_contents('../_datos/config/msg_export.'.mb_strtolower($Cod));
}
}
[PHPEnd]a
echo '<script type="text/javascript">';
foreach( $uDimMSG as $k=>$v ){
$v = str_replace(CHR13,'',$v);
$v = str_replace(CHR10,'&#13;',$v);
$v = str_replace('"','&#34;',$v);
?>
ePF('msg_<?=$k?>', "<?= $v ?>".replace(/&#13;/g,"\n").replace(/&#34;/g,'"'));
<?PHP
}
echo '</script>';
[PHPStart]A
foreach( $_POST as $k=>$v ){
if( $k=='_no_' ) continue;
if( $k[0]=="_" ) continue;
if( $v=='' ){
if( file_exists('../_datos/config/msg_export.'.mb_substr($k,-2)) ){
error_log( date('Y-m-d H:i:s').': rm ../_datos/config/msg_export.'.mb_substr($k,-2)."\n", 3, '../_datos/config/directory.log' );
gsActivity('/_datos/config/directory.log');
}
@unlink('../_datos/config/msg_export.'.mb_substr($k,-2));
}else{
$v = stripslashes( $v );
eTron("_".$k);
file_put_contents('../_datos/config/msg_export.'.mb_substr($k,-2), $v);
gsActivity('/_datos/config/msg_export.'.mb_substr($k,-2));
}
}
eMessage('@MENSAJES GRABADOS@', 'HS');
