function LongitudDelCampoMySql($NomCampo, $Long){
$NomCampo = 'nm_'.mb_substr($NomCampo, 3);
$table = mb_substr($NomCampo, 3);
DB::query("SHOW FIELDS FROM {$table}", [], 1);
while( $row = DB::get(1) ){
if( $NomCampo==trim($row['Field']) ){
$Type = str_replace(')','',$row['Type']);
$tmp = explode('(',$Type);
$tmp[0] = trim(mb_strtolower(trim($tmp[0])));
return $tmp[1]*1;
}
}
return $Long;
}
